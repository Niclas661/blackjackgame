<Window x:Class="BlackjackUI.DialogBox"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BlackjackUI"
        mc:Ignorable="d"
        Title="DialogBox" Height="148.729" Width="228.178">
    <Grid>
        <TextBlock x:Name="textBlock" HorizontalAlignment="Left" Margin="10,10,0,0" TextWrapping="Wrap" Text="Reshuffling the deck means used cards are returned to the stack and can be played with again." VerticalAlignment="Top" Width="200"/>
        <TextBlock x:Name="textBlock_Copy" HorizontalAlignment="Left" Margin="10,63,0,0" TextWrapping="Wrap" Text="Are you sure you want to do this?" VerticalAlignment="Top" Width="200"/>
        <Button x:Name="button" Content="Yes" HorizontalAlignment="Center" Margin="10,88,135,0" VerticalAlignment="Top" Width="75" Click="button_Click"/>
        <Button x:Name="button1" Content="No" HorizontalAlignment="Center" Margin="135,88,10,0" VerticalAlignment="Top" Width="75" Click="button1_Click" IsCancel="True"/>

    </Grid>
</Window>
