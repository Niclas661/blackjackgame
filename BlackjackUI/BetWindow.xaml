<Window x:Class="BlackjackUI.BetWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BlackjackUI"
        mc:Ignorable="d"
        Title="BetWindow" Height="179.237" Width="300">
    <Grid>
        <Label x:Name="lblPlayerBet" Content="How much would you like to bet PLAYER?" Margin="0,10,10,0" VerticalAlignment="Top" HorizontalContentAlignment="Center" Width="272" HorizontalAlignment="Center" VerticalContentAlignment="Bottom"/>
        <TextBox x:Name="txtBet" HorizontalAlignment="Left" Height="23" Margin="84,63,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <Label x:Name="lblAvailable" Content="Available: $000" HorizontalAlignment="Left" Margin="99,36,0,0" VerticalAlignment="Top"/>
        <Button x:Name="btnOK" Content="OK" HorizontalAlignment="Left" Margin="106,107,0,0" VerticalAlignment="Top" Width="75" Click="btnOK_Click"/>

    </Grid>
</Window>
